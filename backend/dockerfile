FROM golang:1.23 AS builder
WORKDIR /app

# Cache modules
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build static binary
RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/api ./cmd/api

########## Runtime stage ##########
FROM gcr.io/distroless/base-debian12:nonroot
ENV GIN_MODE=release
EXPOSE 8081

# Optional: healthcheck shell not available in distroless; use Compose HEALTHCHECK
COPY --from=builder /bin/api /api
USER nonroot:nonroot
ENTRYPOINT ["/api"]

